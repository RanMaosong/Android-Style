<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.song.xmlstyle.ShapeOval"
    android:orientation="vertical"
    android:layout_margin="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_oval_solid"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_oval_padding"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="3"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_oval_circle"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="4"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_oval_stroke"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/shape_oval_stroke_only"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="6"
        android:textSize="30sp"
        android:textColor="@android:color/darker_gray"
        android:background="@drawable/shape_oval_dash_only"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="7"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:background="@drawable/shape_oval_gradient"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>
